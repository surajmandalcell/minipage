{
  "manifest_version": 3,
  "name": "Minipage",
  "version": "1.0.0",
  "description": "Your personal minimal new tab page",
  "homepage_url": "https://www.surajmandal.in/",
  "icons": {
    "16": "src/images/icon/icon_16.png",
    "32": "src/images/icon/icon_32.png",
    "48": "src/images/icon/icon_48.png",
    "128": "src/images/icon/icon_128.png"
  },
  "permissions": [
    "bookmarks",
    "storage",
    "tabs"
  ],
  "background": {
    "service_worker": "./src/background.js"
  },
  "action": {
    "default_title": "Minipage",
    "default_popup": "./src/popup.html"
  },
  "chrome_url_overrides": {
    "newtab": "./src/new-tab-page.html"
  }
}